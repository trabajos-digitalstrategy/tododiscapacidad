<section class="ptr-120 pbr-120">
  <div class="container ">
    <div class="bg-light border-20 height-sm p-32">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <div class="fluid-6-b mb-24">
            {{ newsletter_title }}
          </div>
          {% if newsletter_subtitle %}
          <p class="fluid-8-r text-muted mb-24">{{ newsletter_subtitle }}</p>
          {% endif %}
          {% if newsletter_benefits %}
          <div class="newsletter-benefits mb-24">
            <p class="fluid-9-r text-primary font-weight-600">
              {{ newsletter_benefits }}
            </p>
          </div>
          {% endif %}
          <form action="#" method="post" class="newsletter-form" data-success="{{ newsletter_success_message }}"
            data-error="{{ newsletter_error_message }}">
            <div class="form-group mb-16">
              <input class="input w-100" type="email" name="email" placeholder="{{ newsletter_placeholder }}" required>
            </div>
            <button class="btn btn-primary btn--sm" type="submit">
              {{ newsletter_button }}
            </button>
            {% if newsletter_privacy_text %}
            <div class="newsletter-privacy mt-16">
              <small class="text-muted">
                {{ newsletter_privacy_text }}
                {% if newsletter_privacy_link %}
                <a href="{{ newsletter_privacy_link }}" class="text-primary" target="_blank">Leer m√°s</a>
                {% endif %}
              </small>
            </div>
            {% endif %}
          </form>
        </div>
        <div class="col-xs-12 col-md-6">
          {% if newsletter_image %}
          <div class="newsletter-image-container">
            <img src="{{ newsletter_image }}" alt="{{ newsletter_image_alt }}" class="w-100 h-100"
              style="object-fit: cover; border-radius: 8px;">
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>