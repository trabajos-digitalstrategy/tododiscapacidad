---
layout: layout/base.njk
colorHeader: has-dark-menu
---

{% set noheroimage = [] %}
{% import "macros/_insert.njk" as insert %}

<div class="main-article">



  <!-- Sección de artículos de la newsletter -->
  <section class=" inview">
    <div class="container-global mx-auto ptr-120 pbr-120">
      <div class="row">
        <div class="col-xs-12">
          <h2 class="fluid-3-l mb-48 ">Artículos de la Newsletter </h2>
        </div>
      </div>
      
      <div class="row">
        {% set sortedPosts = collections.blog | sort(false, false, 'date') | reverse %}
        {% for post in sortedPosts %}
          {% if post.data.title and post.data.title != "titulo" %}
            {% set isFirstPost = loop.first %}
            {% set isLastPost = loop.last %}
            
            {% if isFirstPost %}
              <!-- Primer post (más reciente) - Diseño hero destacado -->
              <div class="col-xs-12 mb-32">
                <div class="blog-card-hero bg-white radius-8 shadow-sm overflow-hidden">
                  <div class="row no-gutters">
                    <div class="col-xs-12 col-md-6">
                      {% if post.data.image %}
                      <div class="blog-card-image-hero h-100">
                        <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt or post.data.title }}" class="w-100 h-100 border-20" style="object-fit: cover; min-height: 350px;">
                      </div>
                      {% endif %}
                    </div>
                    <div class="col-xs-12 col-md-6">
                      <div class="blog-card-content-hero p-40">
                        <div class="blog-card-meta mb-20">
                          <span class="featured-badge-hero">Artículo Destacado</span>
                          <span class=" text-muted ml-16">{{ post.data.date | date('DD/MM/YYYY', 'es') }}</span>
                        </div>
                        
                        <h2 class="fluid-6-b mb-20">
                          <a href="{{ post.url }}" class="text-dark text-decoration-none">
                            {{ post.data.title }}
                          </a>
                        </h2>
                        
                        {% if post.data.subtitle %}
                        <p class="fluid-8-r text-muted mb-24">{{ post.data.subtitle }}</p>
                        {% endif %}
                        
                        {% if post.data.descripcion %}
                        <p class="fluid-9-r text-muted mb-32">{{ post.data.descripcion }}</p>
                        {% endif %}
                        
                        <div class="blog-card-footer">
                          <a href="{{ post.url }}" class="btn btn-primary btn-lg">
                            Leer artículo completo
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {% elif isLastPost %}
              <!-- Último post (más antiguo) - Diseño full-width horizontal -->
              <div class="col-xs-12 mb-32">
                <div class="blog-card-featured bg-white radius-8 shadow-sm overflow-hidden">
                  <div class="row no-gutters">
                    <div class="col-xs-12 col-md-6">
                      {% if post.data.image %}
                      <div class="blog-card-image-featured">
                        <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt or post.data.title }}" class="w-100 h-100 border-20" style="object-fit: cover; min-height: 300px;">
                      </div>
                      {% endif %}
                    </div>
                    <div class="col-xs-12 col-md-6">
                      <div class="blog-card-content-featured p-32">
                        <div class="blog-card-meta mb-16">
                          <span class="featured-badge-small">Artículo Anterior</span>
                          <div class="text-12-r ml-16  mb-16">{{ post.data.date | date('DD/MM/YYYY', 'es') }}</div>
                        </div>
                        
                        <h3 class="fluid-6-b mb-16">
                          <a href="{{ post.url }}" class="text-dark text-decoration-none">
                            {{ post.data.title }}
                          </a>
                        </h3>
                        
                        {% if post.data.subtitle %}
                        <p class="fluid-7-r text-muted mb-20">{{ post.data.subtitle }}</p>
                        {% endif %}
                        
                        {% if post.data.descripcion %}
                        <p class="fluid-8-r text-muted mb-24">{{ post.data.descripcion }}</p>
                        {% endif %}
                        
                        <div class="blog-card-footer">
                          <a href="{{ post.url }}" class="btn btn-primary">
                            Leer artículo completo
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {% else %}
              <!-- Posts regulares -->
              <div class="col-xs-12 col-sm-6 col-md-4 mb-32">
                <div class="blog-card bg-white p-24 radius-8 shadow-sm">
                  {% if post.data.image %}
                  <div class="blog-card-image mb-16">
                    <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt or post.data.title }}" class="w-100  border-20" style="height: 200px; object-fit: cover;">
                  </div>
                  {% endif %}
                  
                  <div class="blog-card-content">
                    <div class="blog-card-meta mb-8">
                      <div class="text-12-r mb-8">{{ post.data.date | date('DD/MM/YYYY', 'es') }}</div>
                      {% if post.data.tags %}
                      <div class="tag-wrapper ">
                        {% for tag in post.data.tags %}
                        {% if not loop.last %}<div class="tag-badge  ">{{ tag }}</div> {% else %}<div class="tag-badge  ">{{ tag }}</div>{% endif %}
                        {% endfor %}
                      </div>
                      {% endif %}
                    </div>
                    
                    <h3 class="fluid-8-b mb-12">
                      <a href="{{ post.url }}" class="text-dark text-decoration-none">
                        {{ post.data.title }}
                      </a>
                    </h3>
                    
                    {% if post.data.subtitle %}
                    <p class="text-14-r text-muted mb-16">{{ post.data.subtitle }}</p>
                    {% endif %}
                    

                    
                    <div class="blog-card-footer">
                      <a href="{{ post.url }}" class="btn btn-primary btn-sm">
                        Leer más
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
      
      {% if collections.blog | length == 0 %}
      <div class="row">
        <div class="col-xs-12 text-center">
          <p class="fluid-6-r text-muted">No hay artículos disponibles en este momento.</p>
        </div>
      </div>
      {% endif %}
    </div>
  </section>

  <!-- Sección de categorías -->
  <section class="bg-white inview">
    <div class="container-global mx-auto ptr-80 pbr-80">
      <div class="row">
        <div class="col-xs-12">
          <h2 class="fluid-3-b mb-48 text-center">Categorías de la Newsletter</h2>
        </div>
      </div>
      
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3 mb-24">
          <div class="category-card text-center p-24 bg-light radius-8">
            <div class="category-icon mb-16">
              <i class="fas fa-gavel" style="font-size: 48px; color: #007bff;"></i>
            </div>
            <h4 class="fluid-6-b mb-8">Sentencias Explicadas</h4>
            <p class="fluid-8-r text-muted">Análisis de sentencias judiciales sobre discapacidad</p>
          </div>
        </div>
        
        <div class="col-xs-12 col-sm-6 col-md-3 mb-24">
          <div class="category-card text-center p-24 bg-light radius-8">
            <div class="category-icon mb-16">
              <i class="fas fa-lightbulb" style="font-size: 48px; color: #ffc107;"></i>
            </div>
            <h4 class="fluid-6-b mb-8">Reflexiones Jurídicas</h4>
            <p class="fluid-8-r text-muted">Artículos y análisis sobre derecho y discapacidad</p>
          </div>
        </div>
        
        <div class="col-xs-12 col-sm-6 col-md-3 mb-24">
          <div class="category-card text-center p-24 bg-light radius-8">
            <div class="category-icon mb-16">
              <i class="fas fa-heart" style="font-size: 48px; color: #dc3545;"></i>
            </div>
            <h4 class="fluid-6-b mb-8">Historias Reales</h4>
            <p class="fluid-8-r text-muted">Casos reales y experiencias de familias</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  {% include "components/banner.njk" %}
</div>
