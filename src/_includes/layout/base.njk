<!DOCTYPE html>
<html lang="{{ global_index.lang }}">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="google-site-verification" content="{{ global_index.search_console }}" />
  <title>{{ metaTitle }} </title>
  <meta name="robots" content="{{ metaRobots }}" />
  <meta name="description"
    content="{{ metaDescription or eleventyComputed.metaDescription or metadata.description }}" />
  <meta name="keywords" content="{{ metaKeywords or eleventyComputed.metaKeywords or metaKeywords.description }}" />
  <!-- Favicon y manifest -->
  <link rel="manifest" href="/site.webmanifest">
  <meta property="og:locale" content="es_ES" />
  <meta property="og:site_name"
    content="Check - {{ metaKeywords or eleventyComputed.metaKeywords or metaKeywords.description }}" />
  <meta property="og:type" content="website" />
  <meta property="og:title" content="{{ metaTitle }}" />
  <meta property="og:description"
    content="{{ metaDescription or eleventyComputed.metaDescription or metadata.description }}" />
  <meta property="og:url" content="{{ global_index.url }}{{ page.url | url }}" />
  <meta property="og:image" content="{{ global_index.url }}/assets/static/images/2.webp" />
  <meta name="twitter:card" content="{{ metaTitle }}" />
  <meta name="twitter:title" content="{{ metaTitle }}" />
  <meta name="twitter:description"
    content="{{ metaDescription or eleventyComputed.metaDescription or metadata.description }}" />
  <meta name="twitter:image" content="{{ global_index.url }}/assets/static/favicons/favicon-96x96.png" />
  <link rel="icon" type="image/png" href="{{ global_index.url }}/assets/static/favicons/favicon-32x32.png" />
  <!-- Estilos CSS -->
  <style>
    /* prettier-ignore */
    :root {
    --c-accent: {{ global_index.c_accent }};
    --c-primary: {{ global_index.c_primary }}; 
    --c-secondary: {{ global_index.c_secondary }};
    --bg-dark: {{ global_index.bg_dark }}; 
    --c-bg-dark: {{ global_index.c_bg_dark }}; 
    --bg-light: {{ global_index.bg_light }}; 
    --c-bg-light: {{ global_index.c_bg_light }}; 
    --btn-radius: {{ global_index.btn_radius }}; 
    --padding-global: {{ global_index.padding_global }};
    }
  </style>
  <link rel="stylesheet" href="/assets/css/style.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/photoswipe/4.1.3/photoswipe.min.css">
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <!-- SEO y Open Graph -->
  <link rel="canonical" href="{{ global_index.url }}{{ page.url | url }}" />
  <!-- Google Tag Manager -->
  {% if global_index.tag_manager %}
  <script>
    (function (w, d, s, l, i) {
      w[l] = w[l] || []; w[l].push({
        'gtm.start':
          new Date().getTime(), event: 'gtm.js'
      }); var f = d.getElementsByTagName(s)[0],
        j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
          'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
    })(window, document, 'script', 'dataLayer', '{{ global_index.tag_manager }}');
  </script>
  {% endif %}
  <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LegalService",
        "name": "TodoDiscapacidad",
        "url": "{{ global_index.url }}",
        "logo": "{{ global_index.url }}/assets/static/favicons/favicon-96x96.png",
        "description": "TodoDiscapacidad - El derecho, si no se entiende, no es un derecho. Explicamos la discapacidad y el derecho de forma clara y accesible.",
        "email": "{{ global_index.email or 'info@tododiscapacidad.com' }}",
        "serviceOffered": [
          {
            "@type": "Service",
            "serviceType": "Sentencias Explicadas",
            "description": "Analizamos las últimas sentencias relacionadas con discapacidad y las explicamos con palabras sencillas.",
            "offers": {
              "@type": "Offer",
              "url": "{{ global_index.url }}/blog/",
              "priceCurrency": "EUR"
            }
          },
          {
            "@type": "Service",
            "serviceType": "Asesoramiento Jurídico en Discapacidad",
            "description": "Servicios jurídicos especializados en discapacidad e incapacidad.",
            "offers": {
              "@type": "Offer",
              "url": "{{ global_index.url }}/contacta/",
              "priceCurrency": "EUR"
            }
          }
        ]
      }
      </script>
</head>
<body class="contain {{ colorHeader }} {% if page.url == '/' %}home{% endif %}">
  <!-- Google Tag Manager (noscript) -->
  {% if global_index.tag_manager %}
  <noscript><iframe title="googletagmanager"
      src="https://www.googletagmanager.com/ns.html?id={{ global_index.tag_manager }}" height="0" width="0"
      style="display:none;visibility:hidden"></iframe></noscript>
  {% endif %}
  {% include 'components/header.njk' %}
  <div data-scroll-container>
    {{ content | safe }}
    {% include 'templates_md/footer_2.njk' %}
  </div>
  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/photoswipe/4.1.3/photoswipe.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/photoswipe/4.1.3/photoswipe-ui-default.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@4.1.4/dist/locomotive-scroll.min.js"></script>
  <script type="module" src="/assets/js/index.js"></script>
  <script type="module" src="/assets/js/scroll.js"></script>
  <script type="module" src="/assets/js/inview.js"></script>
  
  <!-- Redirect recovery tokens to password recovery page - only on homepage -->
  {% if page.url == '/' %}
  <script>
    (function() {
      if (window.location.hash.includes("recovery_token")) {
        window.location.href = "/password-recovery.html" + window.location.hash;
      }
    })();
  </script>
  {% endif %}
</body>
</html>