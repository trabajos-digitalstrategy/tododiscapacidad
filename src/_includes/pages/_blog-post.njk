---
layout: layout/base.njk
colorHeader: has-dark-menu
---

{% import "macros/_insert.njk" as insert %}

{% set isFirstPost = collections.blog[0].fileSlug === page.fileSlug %}

{% if isFirstPost %}
  <!-- Hero Section - Featured Post (First Post) -->
  <section class="herohome inview o-hidden bg-hero height-full p-relative">
    {% if image %}
    <div class="parallax-container" style="background-image: url('{{ image }}');">
      <div class="parallax-layer" data-speed="0.3"></div>
    </div>
    {% endif %}
    
    <div class="container-fluid">
      <div class="row section-x align-middle height-full">
        <div class="col-xs-12 col-md-6 col-lg-6">
          <div class="front-text">
            <div class="vertical-wrap mb-24">
              <div class="vertical-inner">
                <span class="featured-badge">Art√≠culo Destacado</span>
                <h1 class="fluid-5-b">{{ title }}</h1> 
              </div>
            </div>
            <div class="vertical-wrap-2 pb-24">
              <div class="vertical-inner">
                <h2 class="fluid-8-r mb-8">{{ subtitle }}</h2>
              </div>
            </div>
            <div class="hero-meta">
              <span class="post-date">{{ page.date | date('DD/MM/YYYY', 'es') }}</span>
              <span class="read-time">5 min de lectura</span>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-6">
          {% if image %}
          <div class="hero-image-container">
            <img class="hero-image" src="{{ image }}" alt="{{ imageAlt or title }}" />
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% else %}
  <!-- Hero Section - Regular Post -->
  <section class="bg-color inview">
    <div class="container-3 mx-auto height-md ptr-120 pbr-120">
      <div class="row section-x align-middle">
        <div class="col-xs-12 front-text text-center">
          <div class="vertical-wrap mb-24">
            <div class="vertical-inner">
              <h1 class="fluid-5-b">{{ title }}</h1> 
            </div>
          </div>
          <div class="vertical-wrap-2 pb-24">
            <div class="vertical-inner">
              <h2 class="fluid-8-r mb-8">{{ subtitle }}</h2>
            </div>
          </div>
          
          <!-- Post Meta Information -->
          <div class="post-meta text-center mb-24">
            <div class="post-meta-item">
              <span class="post-date-icon">üìÖ</span>
              <span class="post-date">{{ page.date | date('DD/MM/YYYY', 'es') }}</span>
            </div>
            {% if author %}
            <div class="post-meta-item">
              <span class="post-author-icon">üë§</span>
              <span class="post-author">{{ author }}</span>
            </div>
            {% endif %}
            <div class="post-meta-item">
              <span class="read-time-icon">‚è±Ô∏è</span>
              <span class="read-time">5 min de lectura</span>
            </div>
          </div>
        </div>
        {% if image %}
        <div class="col-xs-12 ar-16-9">
          <img class="video-cover" width="100%" height="auto" src="{{ image }}" alt="{{ imageAlt or title }}" />
        </div>
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}

  <!-- Content Section -->
  <article class="container-fluid pt-32 bg-light">
    <div class="container mx-auto">
      <div class="row innermarkdown md:reverse">
        <div class="col-xs-12 col-md-8">
          {{ content | safe }}
        </div>
        <div class="col-xs-12 col-md-1"></div>
        <div class="col-xs-12 col-md-3">
          {{ content | toc | safe }}
        </div>
      </div>
    </div>
  </article>

  <!-- Pagination -->
  <div class="container-fluid l-top bg-white">
    <div class="col-xs-12">
      {% set next = collections.blog | nextInCollection(page.fileSlug) %}
      {% set previous = collections.blog | prevInCollection(page.fileSlug) %}
      {% if next or previous %}
      <div class="pagination">
        {% if previous %}
        <a href="{{ previous.url }}" class="pagination-item pagination-item-prev">
          Post anterior
        </a>
        {% endif %}
        {% if next %}
        <a href="{{ next.url }}" class="pagination-item pagination-item-next">
          Siguiente post
        </a>
        {% endif %}
      </div>
      {% endif %}
    </div>
  </div>



  <!-- TOC JavaScript -->
  <script src="/assets/js/toc.js"></script>
